<h1>支援物資在庫</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>説明</th>
      <th>単位</th>
      <th>在庫数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= link_to '詳細', product %></td>
        <td><%= link_to '修正', edit_product_path(product) %></td>
        <td><%= link_to '削除', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規追加', new_product_path %>