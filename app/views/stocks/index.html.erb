<h1>Stock Index</h1>

<h2>Supplies</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Stock</th>
    </tr>
  </thead>
  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.name %></td>
        <td><%= supply.total_stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Products</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Stock</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.total_stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>
