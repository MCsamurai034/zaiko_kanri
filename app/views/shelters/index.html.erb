<h1>Shelters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location Address</th>
      <th>Contact Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= shelter.name %></td>
        <td><%= shelter.location_address %></td>
        <td><%= shelter.contact_info %></td>
        <td><%= link_to 'Show', shelter %></td>
        <td><%= link_to 'Edit', edit_shelter_path(shelter) %></td>
        <td><%= link_to 'Destroy', shelter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Shelter', new_shelter_path %>